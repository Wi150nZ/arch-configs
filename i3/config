# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# keys
set $mod Mod4
set $alt Mod1

# workspace
set $workspace1 "1: "
set $workspace2 "2: "
set $workspace3 "3: "
set $workspace4 "4: "
set $workspace5 "5: "

# class                 border   backgr.  text     indicator child_border
client.focused          #2b2b2b  #2b2b2b  #a9b7c6  #6897bb   #6897bb
client.unfocused        #2b2b2b  #2b2b2b  #a9b7c6  #6897bb   #6897bb
client.focused_inactive #2b2b2b  #2b2b2b  #a9b7c6  #6897bb   #6897bb
client.urgent           #ff0000  #2b2b2b  #a9b7c6  #6897bb   #000000
new_window pixel 0
new_float pixel 0

# font
font pango:Roboto Mono for Powerline 9

# dragging floating windows
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $alt+F4 kill

# rofi- program launcher
bindsym $mod+space exec rofi -font "Roboto Mono for Powerline 10" -show run

# switching between workspaces
workspace_auto_back_and_forth yes
bindsym $alt+Tab workspace back_and_forth

# split orientation
bindsym $mod+q split h;exec notify-send 'tile horizontally'
bindsym $mod+w split v;exec notify-send 'tile vertically'

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+F1 layout stacking; exec notify-send 'stacking layout'
bindsym $mod+F2 layout tabbed; exec notify-send 'tabbed layout'
bindsym $mod+F3 layout toggle split

# toggle tiling / floating
bindsym $mod+e floating toggle

# change focus between tiling / floating windows
bindsym $mod+$alt focus mode_toggle

# switch to workspace
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
  bindsym j resize shrink width 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt
  bindsym l resize shrink height 10 px or 10 ppt
  bindsym semicolon resize grow width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# move floating window
bindsym $mod+m focus floating; mode "move"
mode "move" {
  bindsym Up move up 10px
  bindsym Left move left 10px
  bindsym Down move down 10px
  bindsym Right move right 10px
  bindsym Escape mode "default"
}

# print screen
bindsym Print exec "scrot ~/Screenshot%Y-%m-%d%H:%M:%S.png"

# audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

# i3 config actions
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Escape exec "i3-nagbar -t warning -m 'logout?' -b 'yes' 'i3-msg exit'"

# startup applications
exec_always compton -f
exec wal -i $HOME/Pictures
exec i3-sensible-terminal
exec spotify

# application assignments
assign [class="Google-chrome"] $workspace2
assign [class="Code"] $workspace3
assign [class="Transmission-gtk"] $workspace5

for_window [class="Spotify"] move to workspace $workspace4

# open specific applications in floating mode
for_window [class="URxvt"] floating enable border
for_window [class="Lxappearance"] floating enable sticky enable border normal
for_window [class="Thunar"] floating enable border normal

# useless keybinds (not used) ###########################
# change focus
# bindsym $mod+j focus left
# bindsym $mod+k focus down
# bindsym $mod+l focus up
# bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
# bindsym $mod+Left focus left
# bindsym $mod+Down focus down
